<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">Profile
          <div class="btn btn-default badge">
          <%= link_to 'Edit', edit_user_registration_path %> </div>
        </div>
          <div class="panel-body">
            <h5>Image</h5>
            <%= image_tag(current_user.image.url(:thumb), class: "img-responsive img-circle") %>
            <h5>Name</h5>
            <p><%= current_user.username %></p>
            <h5>Bio</h5>
            <p><%= current_user.bio %></p>
          </div>
        </div>
     </div>
    <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">Your Tambis</div>
         <div class="panel-body">
          <ul class="list-group">
            <% @graphs.each do |graph| %>
              <%= link_to user_graph_path(user_id: current_user, id: graph) do %>
                <li class="list-group-item">
                  <%= graph.title %>
                  <%= link_to user_graph_path(user_id: current_user, id: graph), :class => 'badge', :confirm => "Are you sure you want to delete this canvas?", :method => :delete do %>
                    <i class="fa fa-times"></i>
                  <% end %>
                  <span class='small' ><%= graph.description %></span>
                </li>
              <% end %>
            <% end %>
          </ul>
          <div class="panel panel-default">
            <div class="panel-heading">Create a new Tambi</div>
              <div class="panel-body">
                <%= render 'form' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>