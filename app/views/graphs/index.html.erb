<div class="container">
  <h1>Your Canvases</h1>
  <ul>
    <% @graphs.each do |graph| %>
      <%= link_to user_graph_path(user_id: current_user, id: graph) do %>
        <li>
          <%= graph.title %>
          <%= link_to user_graph_path(user_id: current_user, id: graph), :confirm => "Are you sure you want to delete this canvas?", :method => :delete do %>
            <i class="fa fa-times"></i>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <h2>Create a new canvas</h2>

  <%= render 'form' %>

  <h2>All the Canvases</h2>
  <ul>
    <% @all_graphs.each do |graph| %>
      <%= link_to user_graph_path(user_id: graph.user, id: graph) do %>
        <li>
          <%= graph.title %>
        </li>
      <% end %>
    <% end %>
  </ul>


</div>