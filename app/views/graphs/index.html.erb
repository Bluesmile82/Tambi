<div class="container">
  <h1>All your Graphs</h1>
  <ul>
    <% @graphs.each do |graph| %>
      <%= link_to graph do %>
        <li>
          <%= graph.title %>
          <%= link_to graph, :confirm => "Are you sure you want to delete this graph?", :method => :delete do %>
            <i class="fa fa-times"></i>
          <% end %>
        </li>
      <% end %>
    <% end %>
  </ul>


  <h2>Create a new graph</h2>

  <%= render 'form' %>

</div>